import shutil
import os

# Create a mock folder structure for AlMarket (Frontend + Backend)
base_path = "/mnt/data/AlMarket"
frontend_path = os.path.join(base_path, "frontend")
backend_path = os.path.join(base_path, "backend")

# Create directory structure
os.makedirs(frontend_path, exist_ok=True)
os.makedirs(backend_path, exist_ok=True)

# Create example placeholder files for frontend
with open(os.path.join(frontend_path, "index.html"), "w") as f:
    f.write("<!DOCTYPE html><html><head><title>AlMarket</title></head><body><h1>Welcome to AlMarket</h1></body></html>")
with open(os.path.join(frontend_path, "README.md"), "w") as f:
    f.write("# Frontend for AlMarket")

# Create example placeholder files for backend
with open(os.path.join(backend_path, "server.js"), "w") as f:
    f.write("""const express = require('express');\nconst app = express();\napp.get('/', (req, res) => res.send('Backend AlMarket'));\napp.listen(3000);""")
with open(os.path.join(backend_path, "README.md"), "w") as f:
    f.write("# Backend for AlMarket")

# Create ZIP file of the entire AlMarket project folder
zip_path = "/mnt/data/AlMarket_Full_Project.zip"
shutil.make_archive(zip_path.replace(".zip", ""), 'zip', base_path)

zip_path
