from zipfile import ZipFile
import os

# Define the path to save the zip file
output_path = "/mnt/data/almarket.zip"

# Define the basic file structure for AlMarket project
file_structure = {
    "frontend/index.html": "<!DOCTYPE html>\n<html>\n<head>\n<title>AlMarket</title>\n</head>\n<body>\n<h1>Welcome to AlMarket</h1>\n</body>\n</html>",
    "frontend/styles.css": "body { font-family: sans-serif; }",
    "frontend/app.js": "console.log('AlMarket frontend loaded');",
    "backend/server.js": "const express = require('express');\nconst app = express();\napp.get('/', (req, res) => res.send('AlMarket backend running'));\napp.listen(3000);",
    "backend/.env.example": "STRIPE_SECRET_KEY=your_key_here\nMONGO_URI=your_mongo_uri",
    "README.md": "# AlMarket\n\nMultilingual online gaming item store with payment integration."
}

# Create and write files into the zip
with ZipFile(output_path, 'w') as zipf:
    for file_path, content in file_structure.items():
        # Create a temporary file to write to the zip
        full_path = f"/tmp/{file_path}"
        os.makedirs(os.path.dirname(full_path), exist_ok=True)
        with open(full_path, 'w') as f:
            f.write(content)
        zipf.write(full_path, arcname=file_path)

output_path
